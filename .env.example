# OpenClaw Voice Configuration
# Copy to .env and fill in your values

# ===================
# Required: Choose ONE of these backends
# ===================

# Option A: Connect to OpenClaw Gateway (recommended)
# This gives your voice assistant full agent context, memory, and tools
OPENCLAW_GATEWAY_URL=http://localhost:18789
OPENCLAW_GATEWAY_TOKEN=your-gateway-token
OPENCLAW_GATEWAY_MODEL=main

# Option B: Direct OpenAI (standalone, no agent features)
# OPENAI_API_KEY=sk-your-key-here

# ===================
# Required: Text-to-Speech
# ===================

# ElevenLabs (recommended - high quality)
ELEVENLABS_API_KEY=your-elevenlabs-key
# ELEVENLABS_VOICE_ID=cgSgspJ2msm6clMCkdW9  # Optional: custom voice

# ===================
# Optional: Server settings
# ===================

OPENCLAW_HOST=0.0.0.0
OPENCLAW_PORT=8765
OPENCLAW_RELOAD=false

# STT settings
OPENCLAW_STT_PROVIDER=aliyun  # whisper | aliyun
OPENCLAW_STT_MODEL=base  # tiny, base, small, medium, large-v3-turbo (whisper only)
OPENCLAW_STT_DEVICE=auto  # auto, cpu, cuda, mps (whisper only)
OPENCLAW_STT_LANGUAGE=zh

# Aliyun ASR mode (realtime uses cloud VAD, no local torch required)
OPENCLAW_ALIYUN_ASR_MODE=realtime  # realtime | batch
OPENCLAW_ALIYUN_REALTIME_VAD_SILENCE_MS=900

# Output audio sample rate sent to client (set 16000 for max client compatibility)
OPENCLAW_TTS_OUTPUT_SAMPLE_RATE=16000

# TTS fallback (if ElevenLabs not configured)
OPENCLAW_TTS_MODEL=chatterbox  # chatterbox, xtts, mock

# Auth (set to true for production)
OPENCLAW_REQUIRE_AUTH=false
# OPENCLAW_MASTER_KEY=your-master-key  # For API key management
